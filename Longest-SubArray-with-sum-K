#include <bits/stdc++.h>
using namespace std;

class Solution {
  public:
    int longestSubarray(vector<int>& arr, int k) {
        int n = arr.size();
        int maxlen = 0;
        for (int i = 0; i < n; i++) {
            int currentsum = 0;
            for (int j = i; j < n; j++) {
                currentsum += arr[j];
                if (currentsum == k) {
                    maxlen = max(j - i + 1, maxlen);
                }
            }
        }
        return maxlen;
    }
};

int main() {
    Solution sol;

    vector<int> arr1 = {10, 5, 2, 7, 1, -10};
    int k1 = 15;
    cout << "Longest subarray length: " << sol.longestSubarray(arr1, k1) << endl; // 6

    vector<int> arr2 = {-5, 8, -14, 2, 4, 12};
    int k2 = -5;
    cout << "Longest subarray length: " << sol.longestSubarray(arr2, k2) << endl; // 5

    vector<int> arr3 = {10, -10, 20, 30};
    int k3 = 5;
    cout << "Longest subarray length: " << sol.longestSubarray(arr3, k3) << endl; // 0

    return 0;
}
